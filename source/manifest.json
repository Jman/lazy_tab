{
  "name": "Lazy Tabs",
  "version": "0.0.0.0",
  "manifest_version": 2,
  "description": "Unload all inactive tabs (except pinned) at startup or by clicking an icon",
  "incognito": "not_allowed",
  "minimum_chrome_version": "54",
  "browser_action"    : {
    "default_title"   : "Unload other tabs",
    "default_icon"    : "require(./ico_48.png)"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "128": "require(./ico_128.png)",
    "48": "require(./ico_48.png)"
  }
}